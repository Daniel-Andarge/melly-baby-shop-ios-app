# Minimum Podfile configuration for Median-managed projects
platform :ios, '13.0'

# Only use public CocoaPods repo (remove private spec repos)
source 'https://cdn.cocoapods.org/'

# Keep plugins integration if required by Median
require_relative './plugins.rb'

target 'MellyBabyShop' do
  # Required for Swift pods (keep unless Median specifies otherwise)
  use_frameworks!

  # Median will inject all core dependencies automatically
  # No need to explicitly list pods like GoNativeCore/MedianIcons

  # Keep if Median's plugin system requires this
  use_plugins!
end

# Maintain post_install hooks (Median may override if needed)
post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings.delete 'IPHONEOS_DEPLOYMENT_TARGET'
      config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
      config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
    end
  end
end